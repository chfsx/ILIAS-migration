body {
        color:#222222;
        background-color:#dddddd;
        font-family:Verdana,Arial,Helvetica,sans-serif;
        font-size:small;
                margin:10px;
}
td {
        font-size:small;
}

.btnbar {
        background-color:#006699;
}

input, textarea {
        font-family:Verdana,Arial,Helvetica,sans-serif;
}
/* ---------------- alternating tablerowcolors ----------------- */

.tblrow2 {
	background-image: url(images/cellpic1.gif);
	background-color:#D1D7DC; border: #FFFFFF; border-style: solid; height: 28px;
	color:#222222;
}

.tblrow1 {
	background-image: url(images/cellpic1.gif);
	background-color:#D1D7DC; border: #FFFFFF; border-style: solid; height: 28px;
	color:#222222;
}

/* -------------------- table formatting ------------------ */

.tblheader {
	color: #FFA34F; font-size: 11px; font-weight : bold;
	background-color: #006699; height: 25px;
	background-image: url(images/cellpic3.gif);
}

/* ---------------- headlines ------------------ */

h1 {
   font-size:medium;
   color:#222222;
}

h2 {
   font-size:medium;
   color:#222222;
}

/* ----------------- alternative text styles ------------- */
.small {
        text-decoration:none;
        font-size:x-small;
}

.smallgreen {
        text-decoration:none;
        font-size:x-small;
	color:green;
}

.smallred {
        text-decoration:none;
        font-size:x-small;
	color:red;
}

/* ----------------- normal links ------------- */
a {
        font-weight:bold;
        text-decoration:none;
        color:#006699;
}

a:hover {
        color:#FFFFFF;
}

a:visited {
        color:#006699;
}

/* ------------------- mail links ----------- */
a.mailread
{
        font-weight: normal;
        color: blue;
}

a.mailunread
{
        color: blue;
        font-weight: bold;
}

/* ------------------ buttons -------------- */

.btn {
        background-color:#006699;
        color:#006699;
		border-width:12px;
		border-color:#9999FF;
		border-style:groove;
		padding:5px;
	background-image: url(images/cellpic2.jpg);
}

a.btn {
        color:#006699;
        text-decoration:none;
        font-size:small;
}

a.tblheader:visited, a.tblheader:hover {
                color:#555555;
}

a.btn:visited {
        color:#006699;
        text-decoration:none;
        font-size:small;

}

a.btn:hover {
        color:#00FFFF;

}

.message {
  color: #dd0000;
  font-weight: bold;
  text-align: center;
}

/* ------------------ tabs -------------- */
.tab {
        font-size: x-small;
        color: #000000;
        font-weight: bold;
        background-color:#000000;
}

.tabactive {
        background-color:#dddddd;
}
.tabinactive {
        background-color:#bbbbbb;
}

/* ------------------ content window body tag (not used yet) -------------- */
.content {
        margin:0px;
}

/* --- to prevent images from spacing when using DOCTYPE xhtml --- */
img {
        display: block;
}

sup {
	color:ff0000;
}