<?xml version="1.0" ?>
<DataSources>
	<DataSource type="JDBC" action="append">
		<Query>
			SELECT language FROM il_meta_language
			WHERE obj_id IN (?) AND obj_type IN (?);
		</Query>
		<Param format="list" type="int" value="metaObjId" />
		<Param format="list" type="string" value="metaType" />
		<Field store="YES" index="NOT_ANALYZED" column="language" name="lomLanguage" />
		<Field store="YES" index="NOT_ANALYZED" column="language" name="metaData" />
	</DataSource>
