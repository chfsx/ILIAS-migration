	<DataSource type="JDBC" action="append">
		<Query>
			SELECT role,entity FROM il_meta_contribute imc
			JOIN il_meta_entity ime ON meta_contribute_id = ime.parent_id
			WHERE imc.obj_id IN (?)
			AND imc.obj_type IN (?)
			AND ime.parent_type = 'meta_contribute';
		</Query>
		<Param format="list" type="int" value="metaObjId" />
		<Param format="list" type="string" value="metaType" />
		<Field store="YES" index="ANALYZED" column="role" name="lomRole" />
		<Field store="YES" index="ANALYZED" column="role" name="metaData" />
		<Field store="YES" index="ANALYZED" column="entity" name="lomRoleEntity" />
		<Field store="YES" index="ANALYZED" column="entity" name="metaData" />
	</DataSource>
