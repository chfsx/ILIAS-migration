<?xml version="1.0" encoding="UTF-8"?>
<ObjectDefinition xmlns:xi="http://www.w3.org/2001/XInclude" type="mep">
	<Document type="default">
		<xi:include href="../../Services/Object/LuceneDataSource.xml" />
	</Document>
	<Document type="subItem">
		<DataSource type="JDBC" action="create">
			<Query>
				SELECT title,description,type,owner,obj_id,mep_id
				FROM mep_tree
				JOIN object_data ON child = obj_id
				WHERE depth > 1
				AND mep_id IN (?)
			</Query>
			<Param format="list" type="int" value="objId" />
			<Field store="YES" index="ANALYZED" column="title" name="propertyHigh" /> 
			<Field store="YES" index="ANALYZED" column="description" name="propertyMedium" /> 
			<Field store="YES" index="NOT_ANALYZED" column="owner" name="owner" /> 
			<Field store="YES" index="NOT_ANALYZED" column="obj_id" name="subItem" /> 
			<Field store="YES" index="NOT_ANALYZED" column="mep_id" name="objId" global="NO" /> 
			<Field store="YES" index="NOT_ANALYZED" column="type" name="type" global="NO" />
		</DataSource>
	</Document>
</ObjectDefinition>
